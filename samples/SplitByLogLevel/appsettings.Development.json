{
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "SplitByLogLevel": "Trace",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Debug": {
        "LogLevel": {
          "Default": "Trace",
          "SplitByLogLevel": "Trace",
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information"
        }
      },
      // provider level settings
      "File": {
        // first-level filters
        "LogLevel": {
          "Default": "Debug", // first-level filters can loosen the levels specified by the global filters
          "SplitByLogLevel": "Trace",
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information"
        },
        "BasePath": "Logs",
        "FileAccessMode": "KeepOpenAndAutoFlush",
        "FileEncodingName": "utf-8",
        "DateFormat": "yyyy-MM-dd-HH-mm-ss-fffffff-zzz",
        "CounterFormat": "0000",
        "UseTickCount": true,
        "TickCountFormat": "X8",
        "MaxFileSize": 10485760,
        "IncludeScopes": true,
        "MaxQueueSize": 100,
        "Files": [
          // a simple log file definition which inherits all settings from the provider)
          {
            "Path": "SplitByLogLevel--dt<date:yyyy>-<date:MM>-<date:dd>--<date:HH>-<date:mm>-<date:ss>--TickCount[<ticks>]--TestIteration[<counter>]--MinLogLevel[Trace].log"
          },
          // another log file definition which defines extra filters to only get the warning messages
          {
            "Path": "SplitByLogLevel--dt<date:yyyy>-<date:MM>-<date:dd>--<date:HH>-<date:mm>-<date:ss>--TickCount[<ticks>]--TestIteration[<counter>]--MinLogLevel[Warning].log",
            // second-level filters
            "MinLevel": {
              "Default": "Warning" // this has no effect as second-level filters can only be more restrictive than first-level filters!
            }
          },
          // another log file definition which defines extra filters to only get the critical messages
          {
            "Path": "SplitByLogLevel--dt<date:yyyy>-<date:MM>-<date:dd>--<date:HH>-<date:mm>-<date:ss>--TickCount[<ticks>]--TestIteration[<counter>]--MinLogLevel[Critical].log",
            // second-level filters
            "MinLevel": {
              "Default": "Critical" // this has no effect as second-level filters can only be more restrictive than first-level filters!
            }
          }
        ]
      }
    }
  }