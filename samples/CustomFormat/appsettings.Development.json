{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "CustomFormat": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug",
        "CustomFormat": "Trace",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    // provider level settings
    "File": {
      // first-level filters
      "LogLevel": {
        "Default": "Debug", // first-level filters can loosen the levels specified by the global filters
        "CustomFormat": "Trace",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "BasePath": "Logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyy-MM-dd-HH-mm-ss-fffffff-zzz",
      "CounterFormat": "0000",
      "UseTickCount": true,
      "TickCountFormat": "X8",
      "MaxFileSize": 10485760,
      "TextBuilderType": "CustomFormat.SingleLineLogEntryTextBuilder, CustomFormat",
      "IncludeScopes": true,
      "MaxQueueSize": 100,
      "Files": [
        // a simple log file definition which inherits all settings from the provider (will produce files like "default-000.log")
        {
          "Path": "CustomFormat--dt<date:yyyy>-<date:MM>-<date:dd>--<date:HH>-<date:mm>-<date:ss>--TickCount[<ticks>]--MinLogLevel[Trace].log"
        },
        // another log file definition which defines extra filters and overrides the Counter property (will produce files like "2019/08/other-00.log")
        {
          "Path": "CustomFormat--dt<date:yyyy>-<date:MM>-<date:dd>--<date:HH>-<date:mm>-<date:ss>--TickCount[<ticks>]--MinLogLevel[Warning].log",
          // second-level filters
          "MinLevel": {
            "Default": "Warning" // this has no effect as second-level filters can only be more restrictive than first-level filters!
          }
        }
      ]
    }
  }
}
